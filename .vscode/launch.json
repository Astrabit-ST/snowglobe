  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'snowglobe'",
      "cargo": {
        "args": [
          "build",
          "--bin=snowglobe",
          "--package=snowglobe"
        ],
        "filter": {
          "name": "snowglobe",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'snowglobe' (release)",
      "cargo": {
        "args": [
          "build",
          "--bin=snowglobe",
          "--package=snowglobe",
          "--release"
        ],
        "filter": {
          "name": "snowglobe",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
  ]
}